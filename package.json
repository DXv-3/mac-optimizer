{
    "name": "mac-optimizer",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "concurrently -k \"vite\" \"npm run electron:dev\"",
        "electron:dev": "wait-on http://localhost:5173 && ./run-electron.sh",
        "build": "vite build && electron-builder",
        "preview": "vite preview",
        "fix": "./fix-permissions.sh",
        "preflight": "node -e \"const f=require('fs'),p='node_modules';if(f.existsSync(p)){try{f.realpathSync(p)}catch(e){console.error('\\u274c EPERM detected! Run: npm run fix');process.exit(1)}}console.log('\\u2705 Permissions OK')\""
    },
    "dependencies": {
        "clsx": "^2.1.1",
        "d3": "^7.9.0",
        "framer-motion": "^12.34.3",
        "lucide-react": "^0.378.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.23.0",
        "react-window": "^2.2.7",
        "tailwind-merge": "^2.3.0",
        "zustand": "^5.0.11"
    },
    "devDependencies": {
        "@types/react": "^18.2.66",
        "@types/react-dom": "^18.2.22",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.19",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "electron": "^40.6.0",
        "electron-builder": "^26.8.1",
        "electron-vite": "^5.0.0",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.34.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.6",
        "postcss": "^8.4.38",
        "tailwindcss": "^3.4.3",
        "vite": "^7.3.1",
        "vite-plugin-electron": "^0.28.4",
        "vite-plugin-electron-renderer": "^0.14.5",
        "wait-on": "^9.0.4"
    },
    "main": "electron/main.cjs",
    "build": {
        "appId": "com.yourcompany.mac-optimizer",
        "productName": "Mac Optimizer",
        "directories": {
            "output": "dist-electron"
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "bin/**/*",
            "agents/**/*"
        ],
        "mac": {
            "category": "public.app-category.utilities",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "arm64",
                        "x64"
                    ]
                }
            ],
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "asar": true
        },
        "dmg": {
            "sign": false
        }
    }
}
